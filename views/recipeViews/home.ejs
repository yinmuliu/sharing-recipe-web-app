<%- include('../partials/head.ejs') %>

    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="bd-placeholder-img" width="100%" height="100%" src="https://www.maxwellandwilliams.com.au/media/mageplaza/blog/post/b/l/blog_header_ramekins.jpeg" alt="easypeasy-01" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
            <div class="container">
              <div class="carousel-caption text-start">
                <h1>Easy Peasy</h1>
                <p>Share quick, easy and healthy recipes to the world!</p>
                <p>
                    <a class="btn btn-primary m-2" href="<%= baseUrl %>/recipe">View Recipes</a>
                    <a class="btn btn-primary m-2" href="<%= baseUrl %>/recipe/new">Share Recipes</a>
                </p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img class="bd-placeholder-img" width="100%" height="100%" src="https://igav3-metcdn-com.global.ssl.fastly.net/content/uploads/sites/2/2017/06/05162332/beef-taco-header.jpg" alt="easypeasy-01" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false">
            <div class="container">
              <div class="carousel-caption">
                <h1>Join our foodie community!</h1>
                <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ipsa voluptates alias inventore ut nobis.</p>
                <p><a class="btn btn-primary" href="/user/signup">Sign Up</a></p>
              </div>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    

<div class="album py-5 bg-light pt-1 pb-1"> 
<div class="container">
    <h1 class="p-4 m-5 display-5 text-center">New Recipes Everyday</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 max">
    <% for (let recipe of allRecipes) { %>
    <div class="col" height="450">
        <div class="card shadow-sm mb-3 card">
        <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= recipe.img %>" alt="<%= recipe.title %>" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
        <div class="card-body">
            <h4 class="card-text title-height"><%= recipe.title %></h4>
            <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">
                <a href="<%= baseUrl %>/recipe/<%= recipe.id %>">View</a></button>
            </div>
            <small class="text-muted">Cook time: <%= recipe.cookTime %> mins</small>
            </div>
        </div>
        </div>
    </div>
    <% } %>
    </div>
</div>
</div>


<%- include('../partials/footer.ejs') %>
