<%- include('../partials/head.ejs') %>

<h1>Create New Recipe</h1>
<p>At Easy Peasy, we love quick and easy recipes that can be prepared under 60 minutes!</p>
<form action="<%= baseUrl %>" method="post" enctype="multipart/form-data">
    <div>
        <img src="https://d1y37rophvf5gr.cloudfront.net/Content/images/recipe-default.jpg" 
            alt="default_image" 
            class="recipe_img_target">
        <label for="img">Upload Image</label>
        <input type="file" name="img" id="img">
    </div>

    <div>
        <label for="author">Author</label>
        <input type="text" name="author" id="author" required>
    </div>

    <div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" required>
    </div>

    <div>
        <label for="description">Description</label>
        <input type="textarea" name="description" id="description">
    </div>

    <div>
        <label for="serves">Serves</label>
        <input type="number" name="serves" id="serves" min="1" required>
    </div>

    <div>
        <label for="cookTime">Cook time</label>
        <input type="number" name="cookTime" id="cookTime" min="1" max="60" required>
        <label for="cookTime">mins</label>
    </div>

    <div>
        <label for="ingredients">Ingredients</label>
        <input type="textarea" name="ingredients" id="ingredients">
        <button class="multi-ingredients">Add ingredients</button>
    </div> 

    <div>
        <label for="methods">Methods</label>
        <input type="textarea" name="methods" id="methods">
        <button class="multi-methods">Add another step</button>
    </div>
    
    <input type="submit" value="Create">
</form>

<%- include('../partials/footer.ejs') %>
